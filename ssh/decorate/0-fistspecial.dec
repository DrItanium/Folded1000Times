ACTOR HomingMissile
{
    Radius 6
    Height 6
    Speed 30
    Damage (20)
    Scale 0.75
    Projectile
    +FORCERADIUSDMG
    +SEEKERMISSILE
    DeathSound "missile/hit"
    Obituary "%k blew %o up."
    DamageType "Missile"
    Decal Scorch
    States
    {
    Spawn:
        TNT1 A 0 A_SeekerMissile(9,18,SMF_LOOK | SMF_PRECISE,128,16)
        SEKR A 1 Bright A_SpawnItemEx("MissileTrail",0,0,1,0,0,0,0,160)
        Loop
    Death:
        TNT1 A 0
        TNT1 A 0 A_Scream
        TNT1 A 0 A_SpawnItemEx("MissileExplosionSmall",0,0,0,0,0,0,0,160)
        TNT1 A 0 A_SpawnItemEx("MissileExplosionLarge",0,0,0,0,0,0,0,160)
        TNT1 A 8 Bright A_Explode(32,128,0)
        TNT1 B 6
        TNT1 C 4
        TNT1 A 0
        Stop
    }
}

