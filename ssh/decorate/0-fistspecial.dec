ACTOR ConcussionMissile : FastProjectile
{ 
    Radius 13
    Height 8
    Damage (100)
    Speed 75
    Projectile
    +RANDOMIZE
    +FORCERADIUSDMG
    //RenderStyle Add
    //Alpha 0.75
    DeathSound "grenades/explode"
    States
    {
    Spawn:
        PMIS A 1 BRIGHT A_CustomMissile("PlasmaMissileTrail",0,0,0)
        TNT1 A 0 A_CustomMissile("PlasmaMissileTrailWave",0,0,0)
        Loop
    Death:
        TNT1 A 0
        TNT1 AA 0 A_SpawnItemEx("MissileExplosionSmall",0,0,0,0,0,0,0,160)
        TNT1 AA 0 A_SpawnItemEx("MissileExplosionLarge",0,0,0,0,0,0,0,160)
        TNT1 A 0 Radius_Quake(5,10,0,16,0)
        TNT1 A 0 A_Explode(384,256,0)
        TNT1 A 0 A_SetTranslucent(0.75,1)
        WPXS ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 BRIGHT
        Stop
    }
}

