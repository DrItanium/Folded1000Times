actor SpecialistMagazine : Ammo 
{
    Inventory.PickupMessage "Don't think you should've gotten this."
    Inventory.Amount 1
    Inventory.MaxAmount 26
    Ammo.BackpackAmount 0
    Ammo.BackpackMaxAmount 26
    +IGNORESKILL
    Inventory.Icon "ASMGA0"
    States
    {
    Spawn:
        NOPE A 1
        stop
    }
}

