    BPRT ABCDEFGH 2 //A_SpawnItem("MistSmall")
     loop
  Death:
    TNT1 A 0
     TNT1 A 0 A_Jump(255,"A","B","C","D","E","F","G","H")
    TNT1 A 1
    loop
  A:
       BPRT A 500
